rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Publicly readable collections
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /siteContent/{contentId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
     match /reviews/{reviewId} {
        allow read: if true; // anyone can read approved reviews
        allow create: if request.auth != null; // any authenticated user can create a review
        allow update, delete: if request.auth != null && request.auth.token.admin == true; // only admins can moderate
    }

    // A user can create an order.
    // They can read, update, or delete an order only if they are the owner.
    // An admin can read, update, or delete any order.
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
    }

    // Users can only manage their own profile, but admins can read any profile
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }

    // Fallback rule to deny access to any other path
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
